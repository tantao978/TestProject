@page
@using VideoSite.Localization
@using VideoSite.Web.Pages.Videos
@using Microsoft.Extensions.Localization
@model IndexModel
@inject IStringLocalizer<VideoSiteResource> L
@section scripts
{
    <abp-script src="/Pages/Videos/Index.js" />
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Videos"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
                <abp-button id="NewVideoButton"
                            text="@L["NewVideo"].Value"
                            icon="plus"
                            button-type="Primary" />
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="VideosTable"></abp-table>
    </abp-card-body>
</abp-card>