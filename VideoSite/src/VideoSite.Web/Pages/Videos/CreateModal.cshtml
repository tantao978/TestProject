@page
@using VideoSite.Localization
@using VideoSite.Web.Pages.Videos
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model VideoSite.Web.Pages.Videos.CreateModalModel
@inject IStringLocalizer<VideoSiteResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="Video" asp-page="/Videos/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewVideo"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>